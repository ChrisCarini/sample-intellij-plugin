<idea-plugin>
    <id>com.chriscarini.jetbrains.sample-intellij-plugin</id>
    <name>Sample Menu Action</name>
    <vendor email="jetbrains@chriscarini.com" url="https://jetbrains.chriscarini.com">Chris Carini</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends optional="true" config-file="plugin-github.xml">org.jetbrains.plugins.github</depends>

    <extensions defaultExtensionNs="com.intellij">
        <errorHandler implementation="com.chriscarini.jetbrains.sampleintellijplugin.actions.MyErrorReporter"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="SamplePlugin.SampleMenu" text="Sample Plugin" description="Menu for 'Sample Plugin'">
            <add-to-group group-id="MainMenu" anchor="first"/>
        </group>

        <group id="carini.foobar" internal="true"
               class="com.chriscarini.jetbrains.sampleintellijplugin.actions.MyActionGroup" popup="true">
            <add-to-group group-id="Internal"/>
        </group>
        <!-- Force an exception to be thrown. -->
        <action id="LoCCOP.Force.Exception.Action"
                internal="true"
                class="com.chriscarini.jetbrains.sampleintellijplugin.actions.ForcePluginException">
            <add-to-group
                    group-id="carini.foobar"/> <!-- Hide this under the `Tools -> Internal Actions -> Exceptions` menu. -->
            <add-to-group group-id="SamplePlugin.SampleMenu" anchor="first"/>
        </action>

        <action class="com.chriscarini.jetbrains.sampleintellijplugin.actions.HelloAction" id="HelloAction">
            <add-to-group group-id="SamplePlugin.SampleMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>